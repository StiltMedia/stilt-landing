<main id="main-content" class="hero-form-layout" style="margin-bottom: 204px;">

	<section id="hero">
		<div class="hero-split-right"></div>
		<div class="container">
			<div class="vertical-center-wrapper">
				<div class="vertical-center-table">
					<div class="vertical-center-content">
						<div class="hero-content row">
							<div class="col-lg-6 col-md-6 col-sm-6 margin-top-140">
								<div class="row">
									<div class="col-lg-10">
										<div class="embed-responsive embed-responsive-16by9" data-sr="enter bottom over 1s and move 75px">
											<%= image_tag 'logo-hero.png', class: 'img-responsive' %>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-5 col-sm-6">
										<a href="#our-work" class="hero-btn">view our work</a>
									</div>
									<div class="col-lg-5 col-sm-6">
										<a href="#our-services" class="hero-btn">view our services</a>
									</div>
								</div>
							</div>
							<div class="hero-form-wrapper col-lg-5 col-lg-offset-1 col-md-6 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1 centered" data-sr="over 1.25s">
								<h4 class="all-caps margin-bot-15">Get Your Free Personal Consultation</h4>
	              <%= render 'welcome/form' %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<%= render 'welcome/clients' %>
	<%= render 'welcome/about' %>
	<hr>
	<%= render 'welcome/awards' %>

	<section id="our-work" class="gray-bg">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 centered">
					<p class="section-title">Our Work</p>
					<h2 class="section-heading">Some of our creativity</h2>
				</div>
				<div class="clearfix"></div>
				<div class="the-team-wrapper">
					<div class="col-lg-12 col-md-12">
						<a href="#0" id="mobile-team-filter" class="mobile-filter-select visible-xs"><h4 class="all-caps">all<span class="icon-chevron-thin-down"></span></h4></a>
						<ul class="filter">
							<li class="current all"><a href="#0">All</a></li>
							<% @category.each do |cat| %>
								<li class="<%= cat.name %>" style="text-transform:capitalize;"><a href="#0"><%= cat.name %></a></li>
							<% end %>
						</ul>
					</div>
					<%= render "welcome/work" %>
				</div>
			</div>
		</div>
	</section>

	<%= render 'welcome/services' %>
	<%= render 'welcome/testimonials' %>

</main>
