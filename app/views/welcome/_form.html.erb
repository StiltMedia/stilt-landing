<%= form_for(@contact, html: {class:'register-form margin-top-32 margin-bot-5'}, url: contact_index_path, method: :post) do |f| %>
  <div class="row">

    <div class="col-lg-6 col-md-6">
      <div class="required-field">
        <%= f.text_field :first_name, placeholder: 'First Name', class: 'hero-input', required: ''  %>
        <!-- <input name="heroFname" id="hero-fname" class="hero-input"  type="text" placeholder="First Name"> -->
      </div> <!--/ .required-field -->
    </div>

    <div class="col-lg-6 col-md-6">
      <div class="required-field">
        <%= f.text_field :last_name, placeholder: 'Last Name', class: 'hero-input', required: ''  %>
        <!-- <input name="heroLname" id="hero-lname" class="hero-input"  type="text" placeholder="Last Name"> -->
      </div>
    </div>

    <div class="col-lg-6 col-md-6">
      <div class="required-field">
        <%= f.text_field :email, placeholder: 'Email', class: 'hero-input', type: 'email', required: '' %>
        <!-- <input name="heroEmail" id="hero-email" class="hero-input"  type="text" placeholder="Email Address"> -->
      </div> <!--/ .required-field -->
    </div>

    <div class="col-lg-6 col-md-6">
      <%= f.text_field :phone, placeholder: 'Phone Number', class: 'hero-input', type: 'tel', min: '10' %>
      <!-- <input name="heroBname" id="hero-bname" class="hero-input"  type="text" placeholder="Business Name"> -->
    </div>

    <div class="col-lg-12 col-md-12">
      <%= f.text_field :business_name, placeholder: 'Company Name', class: 'hero-input' %>
      <!-- <input name="heroSubject" id="hero-subject" class="hero-input"  type="text" placeholder="Subject"> -->
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="required-field">
        <%= f.text_area :message, placeholder: 'Message', class: 'hero-input textarea', required: '' %>
        <!-- <textarea name="heroMessage" id="hero-message" class="hero-input textarea" type="text" placeholder="Message"></textarea> -->
      </div>
    </div>

    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
      <%= f.submit 'GET CONSULTATION', class: 'submit-btn' %>
      <!-- <button id="hero-submit" type="submit" class="submit-btn">Submit</button> -->
    </div>

  </div>
<% end %>
