<main id="main-content" class="blog-layout" style="margin-bottom: 234px;">
  <section id="hero" style="background: url('<%= @case.featured_image.url(:retina) %>');background-size: cover;background-position: center center;">
    <div class="color-overlay">
      <div class="container">
        <div class="vertical-center-wrapper">
          <div class="vertical-center-table">
            <div class="vertical-center-content">
              <div class="hero-content row centered">
                <div class="col-lg-12">
                  <h1 class="all-caps text-shadow-medium blog-title"><%= @case.name %></h1>
                  <div class="blog-meta">
                    <ul>
                      <% @case.categories.each do |cat| %>
                        <li>
                          <%= cat.name %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="blog">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <article class="post">
            <div class="post-content">
              <div class="row">
                <div class="col-lg-12 centered">
                  <p class="section-title" style="text-transform:capitalize;"><%= @case.tagline %></p>
                  <h2 class="section-heading">About <%= @case.name %></h2>
                  <br>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-10 col-sm-offset-1 centered">
                  <div class="entry-content">
                    <p><%= @case.description %></p>
                  </div>
                </div>
              </div>
              <div class="margin-top-60"></div>
              <div class="row">
                <div class="post-thumbnail">
                  <a href="#0" title="Pellentesque Tortor Sem Elit Cras Quam Ligula Aenean Consectetur">
                    <img src="https://unsplash.it/1170/775/?image=668" alt="post thumbnail" />
                  </a>
                </div>
              </div>

            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

</main>
